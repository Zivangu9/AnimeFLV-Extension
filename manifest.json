{
    "manifest_version": 2,
    "name": "AnimeFLV",
    "version": "1.0",
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": [
            "/js/jquery-3.7.0.min.js",
            "/js/utility.js",
            "/js/storage.js",
            "/js/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://www3.animeflv.net/*"
            ],
            "js": [
                "/js/jquery-3.7.0.min.js",
                "/js/utility.js",
                "/js/fetch-data.js",
                "/views/general.js",
                "/views/anime.js",
                "/views/profile.js",
                "/views/watched.js",
                "/views/episode.js"
            ]
        }
    ],
    "icons": {
        "128": "img/logo.png"
    }
}